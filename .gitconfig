[user]
	name = Malick DIAGNE
	email = elhmalick@yahoo.fr
[core]
	autocrlf = input
[credential]
	helper = store
	
[alias]
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --date=local
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
	#lol = log --graph --decorate --pretty=oneline --abbrev-commit
	#lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lol = log --pretty=format:'%C(yellow)%h %C(red)%ad %C(blue)%an%C(green)%d %C(reset)%s' --date=short --graph
	lola = log --pretty=format:'%C(yellow)%h %C(red)%ad %C(blue)%an%C(green)%d %C(reset)%s' --date=short --graph --all
	ls = ls-files
	tags = tag -l -n10
	# Show files ignored by git:
        ign = ls-files -o -i --exclude-standard
	fap = fetch --all --prune
[Push]
	default = simple
[color]
    ui = auto
[pull]
	rebase = true

[credential]
       helper = cache --timeout=3600
